<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @search.name %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @search.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @search.longitude %>
</p>

<strong>Forecast:</strong>
<ul>
<% 3.times do |i| %>
  <li><%= @daily_forecast[i][0] %></li>

  <ul>
    <li>High: <%= @daily_forecast[i][1].apparentTemperatureMax %></li>
    <li>Low: <%= @daily_forecast[i][1].apparentTemperatureMin %></li>
    <li>Low: <%= @daily_forecast[i][1].summary %></li>
  </ul>
<% end %>
</ul>

